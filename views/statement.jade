- if ('undefined' !== typeof errors && errors.length)
  ul#errors
    - each error in errors
      li.error= error

.container-fluid
  .row-fluid
  .span12
    h2 #{statement.id} #{statement.title}
  .row-fluid
  each titles, side in statement.sides
    h2 #{statement.length}
    if statement.no_of_sides == 2
      .span6
        h3 #{side}
        each title, i in titles
          p #{title}
    else
      h3 Only 2 sides supported by now

